{
  "name": "the-debate-guide",
  "version": "1.0.0",
  "description": "The Debate Guide: Win Like the Greeks - A guide to classical rhetoric",
  "scripts": {
    "build": "NODE_ENV=production eleventy",
    "build:dev": "eleventy",
    "start": "eleventy --serve",
    "dev": "eleventy --serve --watch",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-og": "node scripts/generate-og-image.js",
    "generate-assets": "npm run generate-icons && npm run generate-og",
    "prebuild:icons": "npm run generate-icons"
  },
  "keywords": [
    "rhetoric",
    "debate",
    "persuasion",
    "classical",
    "greek"
  ],
  "author": "SuperDebate",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@playwright/test": "^1.58.0",
    "clean-css": "^5.3.3",
    "playwright": "^1.58.0",
    "sharp": "^0.33.5",
    "terser": "^5.36.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "claude-flow": "^3.0.0-alpha.179"
  }
}
