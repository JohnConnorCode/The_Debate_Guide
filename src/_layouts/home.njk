---
layout: base.njk
pageType: home
---
{% block styles %}
<link rel="stylesheet" href="{{ '/css/quiz.css' | url }}">
<style>
    /* Table of Contents Specific Styles */
    .toc-hero {
        position: relative;
        padding: calc(var(--header-height) + var(--space-xl)) var(--space-lg) var(--space-lg);
        text-align: center;
        overflow: hidden;
        min-height: 50vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .toc-hero-inner {
        position: relative;
        z-index: 2;
    }

    .toc-badge {
        display: inline-flex;
        align-items: center;
        gap: var(--space-3);
        padding: var(--space-2) var(--space-sm);
        border: var(--border-width) solid var(--accent);
        margin-bottom: var(--space-md);
    }

    .toc-badge span {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        font-weight: var(--font-medium);
        letter-spacing: var(--tracking-caps);
        text-transform: uppercase;
        color: var(--accent);
    }

    .toc-badge .diamond {
        width: 6px;
        height: 6px;
        background: var(--accent);
        transform: rotate(45deg);
    }

    .toc-title {
        font-family: var(--font-display);
        font-size: clamp(var(--text-4xl), 8vw, var(--text-7xl));
        letter-spacing: var(--tracking-wider);
        line-height: var(--leading-tight);
        margin-bottom: var(--space-xs);
    }

    .toc-title .accent {
        color: var(--accent);
    }

    .toc-subtitle {
        font-family: var(--font-body);
        font-size: var(--text-lg);
        color: var(--text-primary);
        opacity: var(--opacity-60);
        max-width: 50ch;
        margin: var(--space-sm) auto 0;
    }

    .toc-container {
        max-width: var(--max-w-narrow);
        margin: 0 auto;
        padding: 0 var(--space-lg) var(--space-xl);
    }

    .toc-intro {
        text-align: center;
        margin-bottom: var(--space-lg);
    }

    .toc-intro-link {
        display: inline-flex;
        align-items: center;
        gap: var(--space-sm);
        font-family: var(--font-display);
        font-size: var(--text-xl);
        letter-spacing: var(--tracking-wider);
        color: var(--text-primary);
        text-decoration: none;
        padding: var(--space-sm) var(--space-md);
        border: var(--border-width) solid rgba(var(--color-white-rgb), 0.2);
        transition: border-color 0.2s ease-out, background 0.2s ease-out, transform 0.2s ease-out;
    }

    .toc-intro-link:hover {
        border-color: var(--accent);
        background: rgba(var(--color-gold-rgb), 0.1);
        transform: translateY(-2px);
    }

    .toc-intro-link:active {
        transform: translateY(0);
    }

    .toc-intro-link span {
        font-family: var(--font-mono);
        font-size: var(--text-sm);
        letter-spacing: var(--tracking-display);
        text-transform: uppercase;
        color: var(--accent);
    }

    .toc-part {
        margin-bottom: var(--space-lg);
    }

    .toc-part-header {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        margin-bottom: var(--space-md);
        padding-bottom: var(--space-xs);
        border-bottom: var(--border-width) solid rgba(var(--color-white-rgb), 0.1);
    }

    .toc-part-number {
        font-family: var(--font-display);
        font-size: var(--text-4xl);
        color: var(--accent);
        opacity: var(--opacity-30);
        line-height: var(--leading-none);
    }

    .toc-part-title {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        letter-spacing: var(--tracking-display);
        color: var(--accent);
    }

    .toc-part-description {
        font-family: var(--font-body);
        font-size: var(--text-sm);
        line-height: var(--leading-relaxed);
        color: var(--text-muted);
        margin: 0 0 var(--space-md) 0;
        padding-left: var(--space-sm);
        border-left: 2px solid rgba(var(--color-gold-rgb), 0.3);
        max-width: 65ch;
    }

    .toc-chapters {
        list-style: none;
    }

    .toc-chapter {
        border-bottom: var(--border-width) solid rgba(var(--color-white-rgb), 0.05);
    }

    .toc-chapter:last-child {
        border-bottom: none;
    }

    .toc-chapter a {
        display: flex;
        align-items: baseline;
        gap: var(--space-sm);
        padding: var(--space-sm) 0;
        padding-left: var(--space-sm);
        text-decoration: none;
        transition: padding-left 0.2s ease-out, background 0.2s ease-out;
        position: relative;
        border-left: 2px solid transparent;
    }

    .toc-chapter a::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 0;
        height: 60%;
        background: var(--accent);
        transition: width 0.2s ease-out;
    }

    .toc-chapter a:hover {
        padding-left: var(--space-md);
        background: rgba(var(--color-gold-rgb), 0.05);
        border-left-color: transparent;
    }

    .toc-chapter a:hover::before {
        width: 3px;
    }

    .toc-chapter a:hover .toc-chapter-title {
        color: var(--accent);
    }

    .toc-chapter a:hover .toc-chapter-number {
        transform: translateX(2px);
    }

    .toc-chapter-number {
        font-family: var(--font-mono);
        font-size: var(--text-sm);
        font-weight: var(--font-medium);
        letter-spacing: var(--tracking-wider);
        color: var(--accent);
        min-width: 3rem;
        transition: transform 0.2s ease-out;
    }

    .toc-chapter-title {
        font-family: var(--font-display);
        font-size: var(--text-lg);
        letter-spacing: var(--tracking-wide);
        color: var(--text-primary);
        flex: 1;
        transition: color 0.2s ease-out;
    }

    .toc-chapter-subtitle {
        font-family: var(--font-body);
        font-size: var(--text-sm);
        color: var(--text-muted);
        display: none;
    }

    @media (min-width: 600px) {
        .toc-chapter-subtitle {
            display: block;
        }
    }

    .toc-chapter.coming-soon a {
        opacity: var(--opacity-40);
        pointer-events: none;
    }

    .toc-chapter.coming-soon .toc-chapter-title::after {
        content: 'Coming Soon';
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: var(--tracking-widest);
        text-transform: uppercase;
        margin-left: var(--space-sm);
        padding: var(--space-1) var(--space-2);
        background: rgba(var(--color-white-rgb), 0.1);
        vertical-align: middle;
    }

    /* Visited chapter indicator - subtle but clear completion state */
    .toc-chapter.is-visited .toc-chapter-number::after {
        content: 'âœ“';
        margin-left: var(--space-2);
        color: var(--accent);
        font-size: 0.75em;
        font-weight: var(--font-bold);
    }

    .toc-chapter.is-visited .toc-chapter-title {
        color: var(--accent);
    }

    .toc-chapter.is-visited a:hover .toc-chapter-title {
        color: var(--accent-hover);
    }

    /* Tablet breakpoint */
    @media (max-width: 768px) {
        .toc-hero {
            padding: calc(var(--header-height) + var(--space-lg)) var(--space-md) var(--space-lg);
            min-height: auto;
        }

        .toc-title {
            font-size: clamp(var(--text-3xl), 8vw, var(--text-5xl));
            margin-bottom: var(--space-xs);
        }

        .toc-subtitle {
            font-size: var(--text-md);
            line-height: var(--leading-relaxed);
        }

        .toc-badge {
            margin-bottom: var(--space-sm);
        }

        .toc-container {
            padding: 0 var(--space-md) var(--space-lg);
        }

        .toc-intro-link {
            font-size: var(--text-lg);
            padding: var(--space-sm);
            min-height: 56px;
        }

        .toc-part-number {
            font-size: var(--text-3xl);
        }

        .toc-part-title {
            font-size: var(--text-lg);
        }

        .toc-chapter a {
            padding: var(--space-sm) 0;
            padding-left: var(--space-sm);
            min-height: 52px;
        }

        .toc-chapter-title {
            font-size: var(--text-md);
        }
    }

    /* Mobile breakpoint */
    @media (max-width: 600px) {
        .toc-hero {
            padding: calc(var(--header-height) + var(--space-md)) var(--space-sm) var(--space-md);
            min-height: auto;
        }

        .toc-title {
            font-size: clamp(var(--text-2xl), 9vw, var(--text-3xl));
            margin-bottom: var(--space-xs);
            line-height: var(--leading-tight);
        }

        .toc-subtitle {
            font-size: var(--text-base);
            line-height: var(--leading-normal);
            margin-top: var(--space-xs);
        }

        .toc-badge {
            padding: var(--space-1) var(--space-xs);
            margin-bottom: var(--space-xs);
        }

        .toc-badge span {
            font-size: 0.625rem;
        }

        .toc-container {
            padding: 0 var(--space-sm) var(--space-md);
        }

        .toc-intro {
            margin-bottom: var(--space-sm);
        }

        .toc-intro-link {
            width: 100%;
            justify-content: center;
            font-size: var(--text-base);
            padding: var(--space-sm);
            min-height: 52px;
        }

        .toc-part {
            margin-bottom: var(--space-md);
        }

        .toc-part-header {
            flex-direction: row;
            align-items: baseline;
            gap: var(--space-xs);
            margin-bottom: var(--space-xs);
            padding-bottom: var(--space-xs);
        }

        .toc-part-number {
            font-size: var(--text-xl);
        }

        .toc-part-title {
            font-size: var(--text-base);
        }

        .toc-chapter a {
            padding: var(--space-xs) 0;
            padding-left: var(--space-xs);
            min-height: 48px;
            align-items: center;
        }

        .toc-chapter a:hover {
            padding-left: var(--space-sm);
        }

        .toc-chapter-number {
            font-size: var(--text-xs);
            min-width: 2.25rem;
        }

        .toc-chapter-title {
            font-size: var(--text-sm);
            line-height: var(--leading-snug);
        }

        .toc-chapter.coming-soon .toc-chapter-title::after {
            font-size: 0.5rem;
            padding: 2px 4px;
        }
    }

    /* Extra small screens */
    @media (max-width: 380px) {
        .toc-title {
            font-size: var(--text-2xl);
        }

        .toc-chapter-number {
            min-width: 2rem;
        }

        .toc-chapter-title {
            font-size: var(--text-sm);
        }
    }
</style>
{% endblock %}

{% block content %}
{{ content | safe }}
{% endblock %}

{% block extras %}
{# Quiz progress badges for TOC #}
<script>
(function() {
    // Wait for quiz.js to load
    function updateTocProgress() {
        if (!window.DebateGuideQuiz) return;

        const progress = window.DebateGuideQuiz.getProgress();

        document.querySelectorAll('.toc-chapter a').forEach(function(link) {
            const match = link.href.match(/chapter-(\d+)/);
            if (!match) return;

            const chapterId = match[1];
            const chapterProgress = progress[chapterId];

            if (chapterProgress) {
                const chapter = link.closest('.toc-chapter');
                const passed = chapterProgress.percentage >= 70;

                if (passed) {
                    chapter.classList.add('quiz-passed');
                }

                // Add score badge
                const existingBadge = link.querySelector('.quiz-score-badge');
                if (!existingBadge) {
                    const badge = document.createElement('span');
                    badge.className = 'quiz-score-badge';
                    badge.textContent = chapterProgress.percentage + '%';
                    badge.title = 'Quiz score: ' + chapterProgress.percentage + '%';
                    link.appendChild(badge);
                }
            }
        });
    }

    // Run on load and when quiz is completed
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(updateTocProgress, 100);
        });
    } else {
        setTimeout(updateTocProgress, 100);
    }

    window.addEventListener('quizCompleted', updateTocProgress);
})();
</script>
{% endblock %}
