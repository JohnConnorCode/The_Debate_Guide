---
layout: base.njk
pageType: home
---
{% block styles %}
<link rel="stylesheet" href="{{ '/css/quiz.css' | url }}?v={{ build.timestamp }}">
<style>
    /* Table of Contents Specific Styles */
    .toc-hero {
        position: relative;
        padding: calc(var(--header-height) + var(--space-xl)) var(--space-lg) var(--space-xl);
        text-align: center;
        overflow: hidden;
        min-height: 100vh;
        min-height: 100dvh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .toc-hero-inner {
        position: relative;
        z-index: 2;
        max-width: 900px;
        padding: var(--space-lg);
    }

    .toc-badge {
        display: inline-flex;
        align-items: center;
        gap: var(--space-3);
        padding: var(--space-2) var(--space-sm);
        border: var(--border-width) solid var(--accent);
        margin-bottom: var(--space-lg);
    }

    .toc-badge span {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        font-weight: var(--font-medium);
        letter-spacing: var(--tracking-caps);
        text-transform: uppercase;
        color: var(--accent);
    }

    .toc-badge .diamond {
        width: 6px;
        height: 6px;
        background: var(--accent);
        transform: rotate(45deg);
    }

    /* Primary title block - tight grouping */
    .toc-title {
        font-family: var(--font-display);
        font-size: clamp(3.5rem, 10vw, 6rem);
        letter-spacing: 0.02em;
        line-height: 0.9;
        margin: 0 0 0.15em 0;
    }

    .toc-tagline {
        font-family: var(--font-display);
        font-size: clamp(1.25rem, 4vw, 2rem);
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--accent);
        margin: 0;
        line-height: 1.2;
    }

    /* Secondary description block - separated from title */
    .toc-subtitle {
        font-family: var(--font-body);
        font-size: clamp(1.05rem, 2.5vw, 1.2rem);
        color: var(--text-primary);
        opacity: 0.9;
        max-width: 42ch;
        margin: var(--space-xl) auto 0;
        line-height: 1.6;
    }

    .toc-audience {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--text-muted);
        margin: var(--space-md) auto 0;
        opacity: 0.7;
    }

    .toc-container {
        max-width: var(--max-w-narrow);
        margin: 0 auto;
        padding: 0 var(--space-lg) var(--space-xl);
    }

    .toc-intro {
        text-align: center;
        margin-bottom: var(--space-lg);
    }

    .toc-intro-link {
        display: inline-flex;
        align-items: center;
        gap: var(--space-sm);
        font-family: var(--font-display);
        font-size: var(--text-xl);
        letter-spacing: var(--tracking-wider);
        color: var(--text-primary);
        text-decoration: none;
        padding: var(--space-sm) var(--space-md);
        border: var(--border-width) solid rgba(var(--color-white-rgb), 0.2);
        transition: border-color 0.2s ease-out, background 0.2s ease-out, transform 0.2s ease-out;
    }

    .toc-intro-link:hover {
        border-color: var(--accent);
        background: rgba(var(--color-gold-rgb), 0.1);
        transform: translateY(-2px);
    }

    .toc-intro-link:active {
        transform: translateY(0);
    }

    .toc-intro-link span {
        font-family: var(--font-mono);
        font-size: var(--text-sm);
        letter-spacing: var(--tracking-display);
        text-transform: uppercase;
        color: var(--accent);
    }

    /* Continue Reading - simple inline link */
    .continue-reading {
        display: block;
        text-align: center;
        margin-bottom: var(--space-md);
        font-family: var(--font-mono);
        font-size: var(--text-sm);
        color: var(--text-muted);
        text-decoration: none;
        padding: var(--space-sm) var(--space-md);
        border: 1px solid rgba(var(--color-gold-rgb), 0.2);
        transition: border-color 0.2s, color 0.2s;
    }

    .continue-reading:hover {
        border-color: var(--accent);
        color: var(--text-primary);
    }

    .continue-reading .continue-chapter {
        color: var(--accent);
        font-weight: var(--font-medium);
    }

    /* Sticky Part Navigation */
    .part-nav {
        position: sticky;
        top: var(--header-height);
        z-index: var(--z-sticky);
        display: flex;
        justify-content: center;
        gap: var(--space-1);
        padding: var(--space-sm) var(--space-md);
        background: var(--bg-primary);
        border-bottom: 1px solid rgba(var(--color-white-rgb), 0.1);
        transition: top 0.3s ease-out;
    }

    .part-nav.header-hidden {
        top: 0;
    }

    [data-theme="light"] .part-nav {
        border-color: rgba(var(--color-black-rgb), 0.1);
    }

    .part-nav-link {
        font-family: var(--font-display);
        font-size: var(--text-md);
        color: var(--text-muted);
        text-decoration: none;
        padding: var(--space-xs) var(--space-sm);
        transition: color 0.2s;
    }

    .part-nav-link:hover,
    .part-nav-link.is-active {
        color: var(--accent);
    }

    @media (max-width: 600px) {
        .part-nav {
            gap: 0;
            padding: var(--space-xs) var(--space-sm);
        }

        .part-nav-link {
            font-size: var(--text-sm);
            padding: var(--space-xs);
        }
    }

    .toc-part {
        margin-bottom: var(--space-lg);
    }

    .toc-part-header {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        margin-bottom: var(--space-md);
        padding-bottom: var(--space-xs);
        border-bottom: var(--border-width) solid rgba(var(--color-white-rgb), 0.1);
    }

    .toc-part-number {
        font-family: var(--font-display);
        font-size: var(--text-4xl);
        color: var(--accent);
        opacity: var(--opacity-50);
        line-height: var(--leading-none);
    }

    .toc-part-title {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        letter-spacing: var(--tracking-display);
        color: var(--accent);
    }

    .toc-part-description {
        font-family: var(--font-body);
        font-size: var(--text-base);
        line-height: var(--leading-relaxed);
        color: var(--text-primary);
        opacity: 0.9;
        margin: 0 0 var(--space-md) 0;
        padding-left: var(--space-sm);
        border-left: 2px solid rgba(var(--color-gold-rgb), 0.3);
    }

    .toc-chapters {
        list-style: none;
    }

    .toc-chapter {
        border-bottom: var(--border-width) solid rgba(var(--color-white-rgb), 0.05);
    }

    .toc-chapter:last-child {
        border-bottom: none;
    }

    .toc-chapter a {
        display: flex;
        align-items: baseline;
        gap: var(--space-sm);
        padding: var(--space-sm) 0;
        padding-left: var(--space-sm);
        text-decoration: none;
        transition: padding-left 0.2s ease-out, background 0.2s ease-out;
        position: relative;
        border-left: 2px solid transparent;
    }

    .toc-chapter a::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 0;
        height: 60%;
        background: var(--accent);
        transition: width 0.2s ease-out;
    }

    .toc-chapter a:hover {
        padding-left: var(--space-md);
        background: rgba(var(--color-gold-rgb), 0.05);
        border-left-color: transparent;
    }

    .toc-chapter a:hover::before {
        width: 3px;
    }

    .toc-chapter a:hover .toc-chapter-title {
        color: var(--accent);
    }

    .toc-chapter a:hover .toc-chapter-number {
        transform: translateX(2px);
    }

    .toc-chapter-number {
        font-family: var(--font-mono);
        font-size: var(--text-sm);
        font-weight: var(--font-medium);
        letter-spacing: var(--tracking-wider);
        color: var(--accent);
        min-width: 3rem;
        transition: transform 0.2s ease-out;
    }

    .toc-chapter-title {
        font-family: var(--font-display);
        font-size: var(--text-lg);
        letter-spacing: var(--tracking-wide);
        color: var(--text-primary);
        flex: 1;
        transition: color 0.2s ease-out;
    }

    .toc-chapter-subtitle {
        font-family: var(--font-body);
        font-size: var(--text-sm);
        color: var(--text-muted);
        display: none;
    }

    @media (min-width: 600px) {
        .toc-chapter-subtitle {
            display: block;
        }
    }

    .toc-chapter.coming-soon a {
        opacity: var(--opacity-40);
        pointer-events: none;
    }

    .toc-chapter.coming-soon .toc-chapter-title::after {
        content: 'Coming Soon';
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: var(--tracking-widest);
        text-transform: uppercase;
        margin-left: var(--space-sm);
        padding: var(--space-1) var(--space-2);
        background: rgba(var(--color-white-rgb), 0.1);
        vertical-align: middle;
    }

    /* Visited chapter indicator - subtle but clear completion state */
    .toc-chapter.is-visited .toc-chapter-number::after {
        content: '✓';
        margin-left: var(--space-2);
        color: var(--accent);
        font-size: 0.75em;
        font-weight: var(--font-bold);
    }

    .toc-chapter.is-visited .toc-chapter-title {
        color: var(--accent);
    }

    .toc-chapter.is-visited a:hover .toc-chapter-title {
        color: var(--accent-hover);
    }

    /* Tablet breakpoint */
    @media (max-width: 768px) {
        .toc-hero {
            padding: calc(var(--header-height) + var(--space-lg)) var(--space-md) var(--space-lg);
        }

        .toc-hero-inner {
            padding: var(--space-md);
        }

        .toc-title {
            font-size: clamp(2.75rem, 11vw, 4.5rem);
        }

        .toc-tagline {
            font-size: clamp(1.1rem, 3.5vw, 1.5rem);
        }

        .toc-subtitle {
            font-size: var(--text-base);
            margin-top: var(--space-lg);
        }

        .toc-badge {
            margin-bottom: var(--space-md);
        }

        .toc-container {
            padding: 0 var(--space-md) var(--space-lg);
        }

        .toc-intro-link {
            font-size: var(--text-lg);
            padding: var(--space-sm);
            min-height: 56px;
        }

        .toc-part-number {
            font-size: var(--text-3xl);
        }

        .toc-part-title {
            font-size: var(--text-lg);
        }

        .toc-chapter a {
            padding: var(--space-sm) 0;
            padding-left: var(--space-sm);
            min-height: 52px;
        }

        .toc-chapter-title {
            font-size: var(--text-md);
        }
    }

    /* Mobile breakpoint */
    @media (max-width: 600px) {
        .toc-hero {
            padding: calc(var(--header-height) + var(--space-md)) var(--space-sm) var(--space-md);
        }

        .toc-hero-inner {
            padding: var(--space-sm);
        }

        .toc-title {
            font-size: clamp(2.5rem, 12vw, 3.5rem);
            letter-spacing: 0.01em;
        }

        .toc-tagline {
            font-size: clamp(1rem, 4vw, 1.25rem);
            letter-spacing: 0.12em;
        }

        .toc-subtitle {
            font-size: var(--text-sm);
            margin-top: var(--space-lg);
            max-width: 32ch;
        }

        .toc-audience {
            font-size: 0.7rem;
            margin-top: var(--space-sm);
        }

        .toc-badge {
            padding: var(--space-2) var(--space-sm);
            margin-bottom: var(--space-sm);
        }

        .toc-badge span {
            font-size: var(--text-xs);
        }

        .toc-container {
            padding: 0 var(--space-sm) var(--space-md);
        }

        .toc-intro {
            margin-bottom: var(--space-sm);
        }

        .toc-intro-link {
            width: 100%;
            justify-content: center;
            font-size: var(--text-base);
            padding: var(--space-sm);
            min-height: 52px;
        }

        .toc-part {
            margin-bottom: var(--space-md);
        }

        .toc-part-header {
            flex-direction: row;
            align-items: baseline;
            gap: var(--space-xs);
            margin-bottom: var(--space-xs);
            padding-bottom: var(--space-xs);
        }

        .toc-part-number {
            font-size: var(--text-xl);
        }

        .toc-part-title {
            font-size: var(--text-base);
        }

        .toc-chapter a {
            padding: var(--space-sm) 0;
            padding-left: var(--space-xs);
            min-height: 48px;
            align-items: center;
        }

        .toc-chapter a:hover {
            padding-left: var(--space-sm);
        }

        .toc-chapter-number {
            font-size: var(--text-xs);
            min-width: 2.25rem;
        }

        .toc-chapter-title {
            font-size: var(--text-sm);
            line-height: var(--leading-snug);
        }

        .toc-chapter.coming-soon .toc-chapter-title::after {
            font-size: 0.5rem;
            padding: 2px 4px;
        }
    }

    /* Extra small screens */
    @media (max-width: 380px) {
        .toc-hero {
            padding: calc(var(--header-height) + var(--space-sm)) var(--space-xs) var(--space-sm);
        }

        .toc-title {
            font-size: clamp(2rem, 13vw, 2.75rem);
        }

        .toc-tagline {
            font-size: clamp(0.9rem, 4vw, 1.1rem);
            letter-spacing: 0.1em;
        }

        .toc-subtitle {
            font-size: var(--text-xs);
        }

        .toc-badge {
            display: inline-flex;
            padding: var(--space-1) var(--space-2);
        }

        .toc-chapter-number {
            min-width: 2rem;
        }

        .toc-chapter-title {
            font-size: var(--text-sm);
        }
    }

    /* ==========================================
       TESTIMONIALS SECTION
       ========================================== */

    .testimonials-section {
        padding: var(--space-xl) var(--space-lg);
    }

    .testimonials-container {
        max-width: var(--max-w-narrow);
        margin: 0 auto;
    }

    .testimonials-header {
        text-align: center;
        margin-bottom: var(--space-lg);
    }

    .testimonials-label {
        display: block;
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        font-weight: var(--font-medium);
        letter-spacing: var(--tracking-caps);
        text-transform: uppercase;
        color: var(--accent);
        margin-bottom: var(--space-xs);
    }

    .testimonials-title {
        font-family: var(--font-display);
        font-size: var(--text-3xl);
        letter-spacing: var(--tracking-wider);
        color: var(--text-primary);
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--space-md);
    }

    .testimonial-card {
        background: rgba(var(--color-gold-rgb), 0.04);
        border: 1px solid rgba(var(--color-gold-rgb), 0.15);
        padding: var(--space-md);
        position: relative;
    }

    .testimonial-card::before {
        content: '"';
        position: absolute;
        top: var(--space-sm);
        left: var(--space-sm);
        font-family: var(--font-display);
        font-size: var(--text-5xl);
        color: var(--accent);
        opacity: 0.15;
        line-height: 1;
    }

    .testimonial-quote {
        font-family: var(--font-body);
        font-size: var(--text-md);
        font-style: italic;
        line-height: var(--leading-relaxed);
        color: var(--text-primary);
        margin: 0 0 var(--space-md) 0;
        padding-left: var(--space-sm);
    }

    .testimonial-author {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
        padding-top: var(--space-sm);
        border-top: 1px solid rgba(var(--color-gold-rgb), 0.15);
    }

    .testimonial-name {
        font-family: var(--font-display);
        font-size: var(--text-base);
        letter-spacing: var(--tracking-wide);
        color: var(--accent);
    }

    .testimonial-role {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: var(--tracking-wider);
        color: var(--text-muted);
    }

    @media (max-width: 768px) {
        .testimonials-section {
            padding: var(--space-lg) var(--space-md);
        }

        .testimonials-title {
            font-size: var(--text-2xl);
        }

        .testimonials-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 600px) {
        .testimonials-section {
            padding: var(--space-md) var(--space-sm);
        }

        .testimonials-title {
            font-size: var(--text-xl);
        }

        .testimonial-quote {
            font-size: var(--text-sm);
        }
    }

    /* ==========================================
       QUIZ PROGRESS CTA
       ========================================== */

    .quiz-progress-cta {
        margin-bottom: var(--space-lg);
        padding: var(--space-md);
        background: rgba(var(--color-gold-rgb), 0.06);
        border: 1px solid rgba(var(--color-gold-rgb), 0.15);
        border-radius: var(--radius-md);
    }

    .quiz-cta-inner {
        display: flex;
        align-items: center;
        gap: var(--space-md);
    }

    .quiz-cta-icon {
        font-size: var(--text-2xl);
        flex-shrink: 0;
    }

    .quiz-cta-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
    }

    .quiz-cta-label {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: var(--tracking-caps);
        text-transform: uppercase;
        color: var(--accent);
        font-weight: var(--font-semibold);
    }

    .quiz-cta-text {
        font-family: var(--font-body);
        font-size: var(--text-sm);
        color: var(--text-primary);
        line-height: var(--leading-normal);
    }

    .quiz-cta-link {
        display: inline-flex;
        align-items: center;
        gap: var(--space-xs);
        padding: var(--space-xs) var(--space-sm);
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: var(--tracking-wide);
        color: var(--accent);
        text-decoration: none;
        border: 1px solid rgba(var(--color-gold-rgb), 0.3);
        border-radius: var(--radius-sm);
        transition: background 0.2s, border-color 0.2s;
        white-space: nowrap;
    }

    .quiz-cta-link:hover {
        background: rgba(var(--color-gold-rgb), 0.15);
        border-color: var(--accent);
    }

    .quiz-cta-link svg {
        transition: transform 0.2s;
    }

    .quiz-cta-link:hover svg {
        transform: translateX(3px);
    }

    @media (max-width: 600px) {
        .quiz-cta-inner {
            flex-direction: column;
            text-align: center;
            gap: var(--space-sm);
        }

        .quiz-cta-link {
            width: 100%;
            justify-content: center;
        }
    }

    /* ==========================================
       TOC CHAPTER STATUS SYMBOLS
       ========================================== */

    .toc-chapter-status {
        font-size: var(--text-sm);
        margin-left: auto;
        padding-left: var(--space-xs);
        flex-shrink: 0;
    }

    .toc-chapter-status[title] {
        cursor: help;
    }

    /* ==========================================
       DUE FOR REVIEW WIDGET
       ========================================== */

    .due-review-widget {
        margin-top: var(--space-sm);
        padding-top: var(--space-sm);
        border-top: 1px dashed rgba(var(--color-gold-rgb), 0.2);
    }

    .due-review-title {
        display: block;
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: var(--tracking-caps);
        text-transform: uppercase;
        color: var(--text-muted);
        margin-bottom: var(--space-xs);
    }

    .due-review-list {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-xs);
    }

    .due-review-item {
        display: inline-block;
        padding: var(--space-1) var(--space-xs);
        font-family: var(--font-body);
        font-size: var(--text-xs);
        color: var(--accent);
        background: rgba(var(--color-gold-rgb), 0.1);
        border-radius: var(--radius-sm);
        text-decoration: none;
        transition: background 0.2s;
    }

    .due-review-item:hover {
        background: rgba(var(--color-gold-rgb), 0.2);
    }

    @media (max-width: 600px) {
        .due-review-list {
            flex-direction: column;
        }

        .due-review-item {
            text-align: center;
        }
    }
</style>
{% endblock %}

{% block content %}
{{ content | safe }}
{% endblock %}

{% block extras %}
<script>
(function() {
    'use strict';

    // Continue Reading - populate from localStorage
    try {
        var lastChapter = localStorage.getItem('lastReadChapter');
        if (lastChapter) {
            var data = JSON.parse(lastChapter);
            var link = document.getElementById('continue-reading');
            if (link && data.url && data.number && data.title) {
                link.href = data.url;
                link.querySelector('.continue-chapter').textContent = 'Chapter ' + data.number;
                link.querySelector('.continue-title').textContent = data.title;
                link.style.display = '';
            }
        }
    } catch (e) {}

    // Quiz Progress CTA - update based on user progress
    try {
        var progressData = localStorage.getItem('debateGuideQuizProgress');
        var spacedRepData = localStorage.getItem('debateGuideSpacedRep');
        var progress = progressData ? JSON.parse(progressData) : {};
        var spacedRep = spacedRepData ? JSON.parse(spacedRepData) : {};

        var ctaLabel = document.getElementById('quiz-cta-label');
        var ctaText = document.getElementById('quiz-cta-text');
        var ctaLinkText = document.getElementById('quiz-cta-link-text');

        // Count passed quizzes
        var passedCount = Object.values(progress).filter(function(p) {
            return p && p.percentage >= 70;
        }).length;

        // Count mastered quizzes (90%+ on 2+ attempts)
        var masteredCount = Object.values(progress).filter(function(p) {
            return p && p.percentage >= 90 && p.attempts >= 2;
        }).length;

        // Update CTA based on progress
        if (passedCount === 0) {
            ctaLabel.textContent = 'Test Your Knowledge';
            ctaText.textContent = 'Each chapter ends with a 10-question quiz. Pass 70% to advance.';
            ctaLinkText.textContent = 'How It Works';
            document.getElementById('quiz-cta-link').href = '/how-quizzes-work/';
        } else if (passedCount === 20) {
            ctaLabel.textContent = 'All Quizzes Complete!';
            ctaText.textContent = 'Congratulations! You\'ve passed all 20 chapter quizzes. ' + masteredCount + ' mastered.';
            ctaLinkText.textContent = 'View Progress';
        } else {
            ctaLabel.textContent = passedCount + ' of 20 Quizzes Passed';
            ctaText.textContent = masteredCount > 0
                ? masteredCount + ' mastered. Keep going!'
                : 'Need 70% to pass. Review missed questions after each attempt.';
            ctaLinkText.textContent = 'View Progress';
        }

        // Due for Review widget
        var dueWidget = document.getElementById('due-review-widget');
        var dueList = document.getElementById('due-review-list');
        var now = new Date();
        var dueChapters = [];

        // Chapter title lookup (simplified - could be enhanced with full data)
        var chapterTitles = {
            '1': 'Why Debate Matters', '2': 'The Greek Legacy', '3': 'The Rhetorical Triangle',
            '4': 'Kairos', '5': 'Ethos', '6': 'Character in Action', '7': 'Pathos',
            '8': 'The Emotions Catalog', '9': 'Logos', '10': 'Evidence and Proof',
            '11': 'Building Your Case', '12': 'The Art of Refutation', '13': 'Fallacies and Traps',
            '14': 'The Socratic Method', '15': 'Steelmanning', '16': 'Debate in the Workplace',
            '17': 'Debate in Education', '18': 'Digital Discourse', '19': 'Debate as Civic Duty',
            '20': 'The Philosopher\'s Victory'
        };

        // Part lookup for chapter URLs
        var chapterParts = {
            '1': 'part-1', '2': 'part-1', '3': 'part-1', '4': 'part-1',
            '5': 'part-2', '6': 'part-2', '7': 'part-2', '8': 'part-2', '9': 'part-2', '10': 'part-2',
            '11': 'part-3', '12': 'part-3', '13': 'part-3', '14': 'part-3', '15': 'part-3',
            '16': 'part-4', '17': 'part-4', '18': 'part-4', '19': 'part-4',
            '20': 'part-5'
        };

        var chapterSlugs = {
            '1': 'why-debate-matters', '2': 'the-greek-legacy', '3': 'the-rhetorical-triangle',
            '4': 'kairos', '5': 'ethos', '6': 'character-in-action', '7': 'pathos',
            '8': 'the-emotions-catalog', '9': 'logos', '10': 'evidence-and-proof',
            '11': 'building-your-case', '12': 'the-art-of-refutation', '13': 'fallacies-and-traps',
            '14': 'the-socratic-method', '15': 'steelmanning', '16': 'debate-in-the-workplace',
            '17': 'debate-in-education', '18': 'digital-discourse', '19': 'debate-as-civic-duty',
            '20': 'the-philosophers-victory'
        };

        Object.keys(spacedRep).forEach(function(chapterId) {
            var rep = spacedRep[chapterId];
            if (rep && rep.nextReview) {
                var nextReview = new Date(rep.nextReview);
                if (nextReview <= now) {
                    dueChapters.push(chapterId);
                }
            }
        });

        if (dueChapters.length > 0 && dueWidget && dueList) {
            dueWidget.style.display = '';
            dueList.innerHTML = dueChapters.slice(0, 3).map(function(id) {
                var num = id.toString().padStart(2, '0');
                var part = chapterParts[id] || 'part-1';
                var slug = chapterSlugs[id] || 'chapter';
                var url = '/chapters/' + part + '/chapter-' + num + '-' + slug + '/#chapter-quiz';
                return '<a href="' + url + '" class="due-review-item">Ch. ' + id + ': ' + (chapterTitles[id] || 'Chapter ' + id) + '</a>';
            }).join('');
            if (dueChapters.length > 3) {
                dueList.innerHTML += '<a href="/progress/" class="due-review-item">+' + (dueChapters.length - 3) + ' more...</a>';
            }
        }

        // TOC Status Symbols - add to each chapter with accessibility
        var tocChapters = document.querySelectorAll('.toc-chapter[data-chapter]');
        tocChapters.forEach(function(chapter) {
            var chapterId = chapter.dataset.chapter;
            var chapterProgress = progress[chapterId];
            var chapterSpacedRep = spacedRep[chapterId];

            // Determine status
            var symbol = '○'; // Not started
            var title = 'Quiz not started';

            if (chapterProgress) {
                var pct = chapterProgress.percentage;
                var attempts = chapterProgress.attempts || 1;

                if (pct >= 90 && attempts >= 2) {
                    symbol = '★';
                    title = 'Quiz mastered (' + pct + '%)';
                } else if (pct >= 70) {
                    symbol = '●';
                    title = 'Quiz passed (' + pct + '%)';
                } else {
                    symbol = '◐';
                    title = 'Quiz attempted (' + pct + '%, needs 70%)';
                }

                // Check if due for review
                if (chapterSpacedRep && chapterSpacedRep.nextReview) {
                    var nextReview = new Date(chapterSpacedRep.nextReview);
                    if (nextReview <= now) {
                        title += ' - Due for review';
                    }
                }
            }

            // Add status span to chapter link
            var link = chapter.querySelector('a');
            if (link) {
                var statusSpan = document.createElement('span');
                statusSpan.className = 'toc-chapter-status';
                statusSpan.textContent = symbol;
                statusSpan.setAttribute('title', title);
                statusSpan.setAttribute('aria-label', title);
                link.appendChild(statusSpan);
            }
        });
    } catch (e) {
        console.debug('Error updating quiz progress:', e);
    }

    // Part Navigation - highlight active section and sync with header visibility
    var partNav = document.getElementById('part-nav');
    var header = document.querySelector('.header');
    if (partNav) {
        var parts = document.querySelectorAll('.toc-part[id]');
        var links = partNav.querySelectorAll('.part-nav-link');

        function updatePartNav() {
            // Highlight active section
            var scrollY = window.scrollY + 150;
            var current = '';

            parts.forEach(function(part) {
                if (part.offsetTop <= scrollY) {
                    current = part.id;
                }
            });

            links.forEach(function(link) {
                link.classList.toggle('is-active', link.getAttribute('href') === '#' + current);
            });

            // Sync with header hidden state
            if (header) {
                partNav.classList.toggle('header-hidden', header.classList.contains('header-hidden'));
            }
        }

        window.addEventListener('scroll', updatePartNav, { passive: true });
        updatePartNav();
    }
})();
</script>
