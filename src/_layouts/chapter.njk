---
layout: base.njk
pageType: chapter
---
{% block styles %}
<link rel="stylesheet" href="{{ '/css/chapter.css' | url }}">
<link rel="stylesheet" href="{{ '/css/quiz.css' | url }}">
{% endblock %}

{% block progressBar %}
{# Reading Progress Bar #}
<div class="progress-bar">
    <div class="progress-bar-fill"></div>
</div>
{% endblock %}

{% block content %}
{# Breadcrumb Navigation #}
{% include "breadcrumbs.njk" %}

{# Reading Toolbar #}
<div class="reading-toolbar">
    <div class="reading-toolbar-inner">
        <button class="toolbar-btn" id="theme-toggle" aria-label="Toggle dark/light mode" title="Toggle theme">
            <svg class="icon-sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
            <svg class="icon-moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
        </button>
        <div class="font-size-controls">
            <button class="toolbar-btn font-btn" data-size="small" aria-label="Small text" title="Small text">A</button>
            <button class="toolbar-btn font-btn" data-size="normal" aria-label="Normal text" title="Normal text">A</button>
            <button class="toolbar-btn font-btn" data-size="large" aria-label="Large text" title="Large text">A</button>
        </div>
        <button class="toolbar-btn" id="toc-toggle" aria-label="Show table of contents" title="Table of contents">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="12" x2="15" y2="12"></line>
                <line x1="3" y1="18" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
</div>

{# Chapter Hero #}
<section class="chapter-hero section-dark">
    {% include "sunburst.njk" %}

    <p class="chapter-part">{{ partTitle }}</p>
    <div class="chapter-number">{{ chapterNumber | padZero }}</div>
    <h1 class="chapter-title">{{ chapterTitle | upper }}</h1>
    <p class="chapter-subtitle">{{ subtitle }}</p>
    <p class="reading-time"></p>
</section>

{% if chapterImage %}
<div class="chapter-image">
    <div class="image-placeholder" data-chapter="{{ chapterNumber | padZero }}">
        <!-- {{ chapterImageAlt or 'Chapter illustration' }} -->
    </div>
</div>
{% endif %}

<div class="deco-border"></div>

{# Chapter Content - includes article, exercises, and navigation #}
<article class="section section-dark">
    {{ content | safe }}
</article>

{# Social Sharing #}
{% include "share-buttons.njk" %}

{# Chapter Quiz #}
{% include "quiz.njk" %}

<div class="deco-border"></div>
{% endblock %}

{% block extras %}
{# Keyboard Hint #}
<div class="keyboard-hint">
    {% if prevChapter %}<kbd>←</kbd> Previous{% endif %}
    {% if nextChapter %}<kbd>→</kbd> Next{% endif %}
    <kbd>Esc</kbd> Contents
</div>
{% endblock %}
