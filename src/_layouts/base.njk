<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

    {# Content visible by default - animations are progressive enhancement only #}
    <script>
        // Mark as JS-enabled, but DON'T hide content yet
        document.documentElement.classList.remove('no-js');
        document.documentElement.classList.add('js-loading');
    </script>

    <meta name="view-transition" content="same-origin">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ title }}{% if title != site.title %} â€” {{ site.title }}{% endif %}</title>

    {# Site-wide keywords #}
    {% if not keywords %}
    <meta name="keywords" content="{{ site.keywords | join(', ') }}">
    {% endif %}

    {# Fonts - preconnect and preload for performance #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=IBM+Plex+Mono:wght@400;500;600&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=IBM+Plex+Mono:wght@400;500;600&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600&display=swap" rel="stylesheet">

    {# Stylesheets - tokens first (CSS variables), then animations, then main styles #}
    <link rel="stylesheet" href="{{ '/css/tokens.css' | url }}?v={{ build.timestamp }}">
    <link rel="stylesheet" href="{{ '/css/animations.css' | url }}?v={{ build.timestamp }}">
    <link rel="stylesheet" href="{{ '/css/styles.css' | url }}?v={{ build.timestamp }}">
    {% block styles %}{% endblock %}

    {# SEO Meta Tags #}
    {% include "seo.njk" %}

    {# PWA Manifest #}
    <link rel="manifest" href="{{ '/manifest.json' | url }}">
    <meta name="theme-color" content="#c9a227">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Debate Guide">

    {# Favicon #}
    <link rel="icon" href="{{ '/favicon.ico' | url }}" sizes="32x32">
    <link rel="icon" type="image/svg+xml" href="{{ '/assets/favicon.svg' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/icons/icon-32x32.png' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/icons/icon-16x16.png' | url }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/icons/apple-touch-icon.png' | url }}">

    {# Prevent theme/font flash #}
    <script>
    (function() {
        try {
            var theme = localStorage.getItem('theme');
            if (!theme) {
                theme = window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
            }
            document.documentElement.setAttribute('data-theme', theme);

            var fontSize = localStorage.getItem('fontSize');
            if (fontSize) {
                document.documentElement.setAttribute('data-font-size', fontSize);
            }
        } catch (e) {}
    })();
    </script>
</head>
<body>
    {# Skip link for keyboard navigation #}
    <a href="#main-content" class="skip-link">Skip to main content</a>

    {# Noscript fallback for users with JavaScript disabled #}
    <noscript>
        <div style="background: #c9a227; color: #0d0d0d; padding: 1rem; text-align: center; font-family: sans-serif;">
            <strong>JavaScript Required:</strong> Some features (search, quizzes, progress tracking) require JavaScript.
            The main content is still readable without it.
        </div>
    </noscript>

    {% block progressBar %}{% endblock %}

    {% include "reading-toolbar.njk" %}

    {% include "header.njk" %}

    <main id="main-content">
    {% block content %}
    {{ content | safe }}
    {% endblock %}
</main>

    {% include "footer.njk" %}

    {# Scroll to top button #}
    <button class="scroll-to-top" aria-label="Scroll to top" title="Scroll to top">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M10 4L3 11L4.4 12.4L9 7.8V16H11V7.8L15.6 12.4L17 11L10 4Z" fill="currentColor"/>
        </svg>
    </button>

    {% block extras %}{% endblock %}

    {# Search Modal #}
    {% include "search.njk" %}

    {# Keyboard Shortcuts Help Modal #}
    {% include "keyboard-help.njk" %}

    {# SuperDebate Community Popup #}
    {% include "community-popup.njk" %}

    <script src="{{ '/js/navigation.js' | url }}?v={{ build.timestamp }}"></script>
    <script src="{{ '/js/community-popup.js' | url }}?v={{ build.timestamp }}" defer></script>
    <script src="{{ '/js/search.js' | url }}?v={{ build.timestamp }}" defer></script>
    <script src="{{ '/js/quiz.js' | url }}?v={{ build.timestamp }}" defer></script>
    <script src="{{ '/js/toast.js' | url }}?v={{ build.timestamp }}" defer></script>

    {# Supabase Auth - Cross-device sync with superdebate.org #}
    {% if site.supabaseUrl and site.supabaseAnonKey %}
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.min.js"></script>
    <script>
        window.SUPABASE_URL = '{{ site.supabaseUrl }}';
        window.SUPABASE_ANON_KEY = '{{ site.supabaseAnonKey }}';
    </script>
    <script src="{{ '/js/auth.js' | url }}?v={{ build.timestamp }}" defer></script>
    {% endif %}

    {# Analytics - Privacy-conscious, no cookies, GDPR compliant #}
    {# Replace YOUR_DOMAIN with your Plausible domain or remove if not using analytics #}
    {% if site.analyticsEnabled %}
    <script defer data-domain="{{ site.domain }}" src="https://plausible.io/js/script.js"></script>
    {# Web Vitals - Core performance metrics #}
    <script type="module">
    import {onCLS, onFID, onLCP, onFCP, onTTFB} from 'https://unpkg.com/web-vitals@3/dist/web-vitals.attribution.js?module';
    function sendToAnalytics({name, delta, rating}) {
        if (window.plausible) {
            window.plausible('Web Vitals', {props: {metric: name, value: Math.round(delta), rating: rating}});
        }
    }
    onCLS(sendToAnalytics);
    onFID(sendToAnalytics);
    onLCP(sendToAnalytics);
    onFCP(sendToAnalytics);
    onTTFB(sendToAnalytics);
    </script>
    {% endif %}

    {# Service Worker Registration - Network First Strategy #}
    <script>
    if ('serviceWorker' in navigator) {
        // Listen for SW update messages
        navigator.serviceWorker.addEventListener('message', function(event) {
            if (event.data && event.data.type === 'SW_UPDATED') {
                console.log('SW updated to:', event.data.version);
                window.location.reload();
            }
        });

        // Reload when controller changes
        navigator.serviceWorker.addEventListener('controllerchange', function() {
            window.location.reload();
        });

        window.addEventListener('load', function() {
            navigator.serviceWorker.register('/service-worker.js')
                .then(function(registration) {
                    // Force update check
                    registration.update();

                    // Handle new SW installation
                    registration.addEventListener('updatefound', function() {
                        var newWorker = registration.installing;
                        newWorker.addEventListener('statechange', function() {
                            if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                                // Tell new SW to take over immediately
                                newWorker.postMessage('skipWaiting');
                            }
                        });
                    });
                });
        });
    }
    </script>
</body>
</html>
