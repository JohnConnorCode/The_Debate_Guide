<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

    {# Content visible by default - animations are progressive enhancement only #}
    <script>
        // Mark as JS-enabled, but DON'T hide content yet
        document.documentElement.classList.remove('no-js');
        document.documentElement.classList.add('js-loading');
    </script>

    <meta name="view-transition" content="same-origin">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ title }}{% if title != site.title %} â€” {{ site.title }}{% endif %}</title>

    {# Site-wide keywords #}
    {% if not keywords %}
    <meta name="keywords" content="{{ site.keywords | join(', ') }}">
    {% endif %}

    {# Fonts - preconnect and preload for performance #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=IBM+Plex+Mono:wght@400;500;600&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=IBM+Plex+Mono:wght@400;500;600&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600&display=swap" rel="stylesheet">

    {# Stylesheets - animations.css loaded first to ensure elements start hidden #}
    <link rel="stylesheet" href="{{ '/css/animations.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
    {% block styles %}{% endblock %}

    {# SEO Meta Tags #}
    {% include "seo.njk" %}

    {# PWA Manifest #}
    <link rel="manifest" href="{{ '/manifest.json' | url }}">
    <meta name="theme-color" content="#c9a227">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Debate Guide">

    {# Favicon #}
    <link rel="icon" href="{{ '/favicon.ico' | url }}" sizes="32x32">
    <link rel="icon" type="image/svg+xml" href="{{ '/assets/favicon.svg' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/icons/icon-32x32.png' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/icons/icon-16x16.png' | url }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/icons/apple-touch-icon.png' | url }}">

    {# Prevent theme/font flash #}
    <script>
    (function() {
        try {
            var theme = localStorage.getItem('theme');
            if (!theme) {
                theme = window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
            }
            document.documentElement.setAttribute('data-theme', theme);

            var fontSize = localStorage.getItem('fontSize');
            if (fontSize) {
                document.documentElement.setAttribute('data-font-size', fontSize);
            }
        } catch (e) {}
    })();
    </script>
</head>
<body>
    {# Skip link for keyboard navigation #}
    <a href="#main-content" class="skip-link">Skip to main content</a>

    {% block progressBar %}{% endblock %}

    {% include "header.njk" %}

    <main id="main-content">
    {% block content %}
    {{ content | safe }}
    {% endblock %}
</main>

    {% include "footer.njk" %}

    {# Scroll to top button #}
    <button class="scroll-to-top" aria-label="Scroll to top" title="Scroll to top">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M10 4L3 11L4.4 12.4L9 7.8V16H11V7.8L15.6 12.4L17 11L10 4Z" fill="currentColor"/>
        </svg>
    </button>

    {% block extras %}{% endblock %}

    {# Search Modal #}
    {% include "search.njk" %}

    {# Keyboard Shortcuts Help Modal #}
    {% include "keyboard-help.njk" %}

    <script src="{{ '/js/navigation.js' | url }}"></script>
    <script src="{{ '/js/search.js' | url }}" defer></script>
    <script src="{{ '/js/quiz.js' | url }}" defer></script>
    <script src="{{ '/js/toast.js' | url }}" defer></script>

    {# Analytics - Privacy-conscious, no cookies, GDPR compliant #}
    {# Replace YOUR_DOMAIN with your Plausible domain or remove if not using analytics #}
    {% if site.analyticsEnabled %}
    <script defer data-domain="{{ site.domain }}" src="https://plausible.io/js/script.js"></script>
    {# Web Vitals - Core performance metrics #}
    <script type="module">
    import {onCLS, onFID, onLCP, onFCP, onTTFB} from 'https://unpkg.com/web-vitals@3/dist/web-vitals.attribution.js?module';
    function sendToAnalytics({name, delta, rating}) {
        if (window.plausible) {
            window.plausible('Web Vitals', {props: {metric: name, value: Math.round(delta), rating: rating}});
        }
    }
    onCLS(sendToAnalytics);
    onFID(sendToAnalytics);
    onLCP(sendToAnalytics);
    onFCP(sendToAnalytics);
    onTTFB(sendToAnalytics);
    </script>
    {% endif %}

    {# Service Worker Registration with Update Handling #}
    <script>
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
            navigator.serviceWorker.register('/service-worker.js')
                .then(function(registration) {
                    console.log('SW registered:', registration.scope);

                    // Check for updates periodically
                    setInterval(function() {
                        registration.update();
                    }, 60 * 60 * 1000); // Check every hour
                })
                .catch(function(error) {
                    console.log('SW registration failed:', error);
                });

            // Listen for SW update messages
            navigator.serviceWorker.addEventListener('message', function(event) {
                if (event.data && event.data.type === 'SW_UPDATED') {
                    // Use toast notification if available, fallback to inline
                    if (window.Toast) {
                        window.Toast.info('New content available', {
                            duration: 10000,
                            action: {
                                label: 'Refresh',
                                onClick: function() { window.location.reload(); }
                            }
                        });
                    }
                }
            });
        });
    }
    </script>
</body>
</html>
