---
layout: base.njk
title: "All Quizzes — The Debate Guide"
description: "Test your knowledge across all 20 chapters. Track your progress, see what's due for review, and master the art of rhetoric."
permalink: /quizzes/
---
{% block styles %}
<link rel="stylesheet" href="{{ '/css/chapter.css' | url }}?v={{ build.timestamp }}">
<style>
.quiz-hub {
    max-width: var(--max-w-content);
    margin: 0 auto;
    padding: var(--space-lg);
}

.quiz-hub-intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-xl) auto;
}

.quiz-hub-intro p {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
}

.quiz-hub-intro a {
    color: var(--accent);
    text-decoration: none;
}

.quiz-hub-intro a:hover {
    text-decoration: underline;
}

/* Stats bar */
.quiz-hub-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    padding: var(--space-md);
    background: rgba(var(--color-white-rgb), 0.02);
    border: var(--border-width) solid rgba(var(--color-white-rgb), 0.1);
    border-radius: var(--radius-md);
}

[data-theme="light"] .quiz-hub-stats {
    background: rgba(var(--color-black-rgb), 0.02);
    border-color: rgba(var(--color-black-rgb), 0.1);
}

.quiz-hub-stat {
    text-align: center;
}

.quiz-hub-stat-value {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    color: var(--accent);
    line-height: 1;
}

.quiz-hub-stat-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-caps);
    color: var(--text-muted);
    margin-top: var(--space-1);
}

/* Part sections */
.quiz-part {
    margin-bottom: var(--space-xl);
}

.quiz-part-header {
    display: flex;
    align-items: baseline;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-xs);
    border-bottom: var(--border-width) solid rgba(var(--color-white-rgb), 0.1);
}

[data-theme="light"] .quiz-part-header {
    border-color: rgba(var(--color-black-rgb), 0.1);
}

.quiz-part-number {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    letter-spacing: var(--tracking-caps);
    color: var(--accent);
}

.quiz-part-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    letter-spacing: var(--tracking-wider);
    color: var(--text-primary);
}

/* Quiz cards */
.quiz-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-md);
}

.quiz-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-md);
    background: rgba(var(--color-white-rgb), 0.02);
    border: var(--border-width) solid rgba(var(--color-white-rgb), 0.1);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease-out;
}

[data-theme="light"] .quiz-card {
    background: rgba(var(--color-black-rgb), 0.02);
    border-color: rgba(var(--color-black-rgb), 0.1);
}

.quiz-card:hover {
    border-color: var(--accent);
    background: rgba(var(--color-gold-rgb), 0.05);
    transform: translateY(-2px);
}

.quiz-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-xs);
}

.quiz-card-chapter {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    letter-spacing: var(--tracking-caps);
    color: var(--accent);
}

.quiz-card-status {
    font-size: var(--text-lg);
}

.quiz-card-title {
    font-family: var(--font-display);
    font-size: var(--text-base);
    letter-spacing: var(--tracking-wide);
    color: var(--text-primary);
    margin-bottom: var(--space-xs);
    line-height: var(--leading-tight);
}

.quiz-card-meta {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
}

.quiz-card-score {
    margin-top: auto;
    padding-top: var(--space-sm);
    border-top: 1px solid rgba(var(--color-white-rgb), 0.05);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--text-muted);
}

[data-theme="light"] .quiz-card-score {
    border-color: rgba(var(--color-black-rgb), 0.05);
}

.quiz-card-score.passed {
    color: #4caf50;
}

.quiz-card-score.mastered {
    color: var(--accent);
}

.quiz-card-review {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    margin-left: var(--space-sm);
    padding: 2px 6px;
    background: rgba(var(--color-gold-rgb), 0.15);
    border-radius: var(--radius-sm);
    color: var(--accent);
    font-size: var(--text-xs);
}

/* CTA */
.quiz-hub-cta {
    text-align: center;
    margin-top: var(--space-xl);
    padding: var(--space-lg);
    background: rgba(var(--color-gold-rgb), 0.05);
    border: var(--border-width) solid rgba(var(--color-gold-rgb), 0.2);
    border-radius: var(--radius-lg);
}

.quiz-hub-cta p {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--text-muted);
    margin-bottom: var(--space-md);
}

.quiz-hub-cta a {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-sm) var(--space-md);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    text-decoration: none;
    background: var(--accent);
    color: var(--color-ink);
    border-radius: var(--radius-sm);
    transition: opacity 0.2s ease-out;
}

.quiz-hub-cta a:hover {
    opacity: 0.9;
}

@media (max-width: 600px) {
    .quiz-hub {
        padding: var(--space-md);
    }

    .quiz-hub-stats {
        flex-wrap: wrap;
        gap: var(--space-md);
    }

    .quiz-hub-stat {
        flex: 1 1 80px;
    }

    .quiz-grid {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}

{# Page Hero #}
<section class="chapter-hero section-dark">
    {% include "sunburst.njk" %}
    <p class="chapter-part">Test Your Knowledge</p>
    <div class="chapter-number" style="opacity: 0.05;">?</div>
    <h1 class="chapter-title">ALL QUIZZES</h1>
    <p class="chapter-subtitle">20 chapter quizzes • 200 questions • Track your mastery</p>
</section>

<div class="deco-border"></div>

<section class="section section-dark">
    <div class="quiz-hub">

        <div class="quiz-hub-intro">
            <p>Each chapter ends with a 10-question quiz to reinforce key concepts. Pass with 70% to complete. Score 90%+ twice to master.</p>
            <p><a href="{{ '/how-quizzes-work/' | url }}">Learn how the quiz system works →</a></p>
        </div>

        <div class="quiz-hub-stats" id="quiz-hub-stats">
            <div class="quiz-hub-stat">
                <div class="quiz-hub-stat-value" id="hub-stat-completed">0</div>
                <div class="quiz-hub-stat-label">Passed</div>
            </div>
            <div class="quiz-hub-stat">
                <div class="quiz-hub-stat-value" id="hub-stat-mastered">0</div>
                <div class="quiz-hub-stat-label">Mastered</div>
            </div>
            <div class="quiz-hub-stat">
                <div class="quiz-hub-stat-value" id="hub-stat-attempts">0</div>
                <div class="quiz-hub-stat-label">Attempts</div>
            </div>
            <div class="quiz-hub-stat">
                <div class="quiz-hub-stat-value" id="hub-stat-avg">—</div>
                <div class="quiz-hub-stat-label">Avg Score</div>
            </div>
            <div class="quiz-hub-stat">
                <div class="quiz-hub-stat-value" id="hub-stat-due">0</div>
                <div class="quiz-hub-stat-label">Due Review</div>
            </div>
        </div>

        {% for part in chapters.parts %}
        <section class="quiz-part">
            <div class="quiz-part-header">
                <span class="quiz-part-number">PART {{ part.number }}</span>
                <h2 class="quiz-part-title">{{ part.title }}</h2>
            </div>
            <div class="quiz-grid">
                {% for chapter in part.chapters %}
                <a href="{{ '/chapters/' + part.id + '/chapter-' + (chapter.number | padZero) + '-' + chapter.slug + '/#chapter-quiz' | url }}"
                   class="quiz-card"
                   data-chapter="{{ chapter.number }}">
                    <div class="quiz-card-header">
                        <span class="quiz-card-chapter">Chapter {{ chapter.number }}</span>
                        <span class="quiz-card-status" title="Not started" aria-label="Quiz not started">○</span>
                    </div>
                    <div class="quiz-card-title">{{ chapter.title }}</div>
                    <div class="quiz-card-meta">10 questions • ~5 min</div>
                    <div class="quiz-card-score">Not attempted</div>
                </a>
                {% endfor %}
            </div>
        </section>
        {% endfor %}

        <div class="quiz-hub-cta">
            <p>New to the quiz system? Learn about scoring, hints, spaced repetition, and achievements.</p>
            <a href="{{ '/how-quizzes-work/' | url }}">
                <span>How Quizzes Work</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
            </a>
        </div>

    </div>
</section>

<div class="deco-border"></div>

{% block scripts %}
<script>
(function() {
    'use strict';

    try {
        var progressData = localStorage.getItem('debateGuideQuizProgress');
        var spacedRepData = localStorage.getItem('debateGuideSpacedRep');
        var progress = progressData ? JSON.parse(progressData) : {};
        var spacedRep = spacedRepData ? JSON.parse(spacedRepData) : {};

        var completedCount = 0;
        var masteredCount = 0;
        var dueCount = 0;
        var totalScore = 0;
        var scoreCount = 0;
        var totalAttempts = 0;
        var now = new Date();

        // Update each quiz card
        document.querySelectorAll('.quiz-card[data-chapter]').forEach(function(card) {
            var chapterId = card.dataset.chapter;
            var chapterProgress = progress[chapterId];
            var chapterSpacedRep = spacedRep[chapterId];
            var statusEl = card.querySelector('.quiz-card-status');
            var scoreEl = card.querySelector('.quiz-card-score');

            if (chapterProgress) {
                var pct = chapterProgress.percentage;
                var attempts = chapterProgress.attempts || 1;
                totalScore += pct;
                scoreCount++;
                totalAttempts += attempts;

                var attemptsText = attempts === 1 ? '1 attempt' : attempts + ' attempts';

                if (pct >= 90 && attempts >= 2) {
                    // Mastered
                    completedCount++;
                    masteredCount++;
                    if (statusEl) {
                        statusEl.textContent = '★';
                        statusEl.title = 'Mastered';
                        statusEl.setAttribute('aria-label', 'Quiz mastered');
                    }
                    if (scoreEl) {
                        scoreEl.textContent = 'Mastered • ' + pct + '% • ' + attemptsText;
                        scoreEl.className = 'quiz-card-score mastered';
                    }
                } else if (pct >= 70) {
                    // Passed
                    completedCount++;
                    if (statusEl) {
                        statusEl.textContent = '●';
                        statusEl.title = 'Passed';
                        statusEl.setAttribute('aria-label', 'Quiz passed');
                    }
                    if (scoreEl) {
                        scoreEl.textContent = 'Passed • ' + pct + '% • ' + attemptsText;
                        scoreEl.className = 'quiz-card-score passed';
                    }
                } else {
                    // Attempted
                    if (statusEl) {
                        statusEl.textContent = '◐';
                        statusEl.title = 'Attempted';
                        statusEl.setAttribute('aria-label', 'Quiz attempted');
                    }
                    if (scoreEl) {
                        scoreEl.textContent = 'Best: ' + pct + '% • ' + attemptsText;
                    }
                }

                // Check for review due
                if (chapterSpacedRep && chapterSpacedRep.nextReview) {
                    var nextReview = new Date(chapterSpacedRep.nextReview);
                    if (nextReview <= now) {
                        dueCount++;
                        if (scoreEl) {
                            scoreEl.innerHTML += '<span class="quiz-card-review">↻ Review</span>';
                        }
                    }
                }
            }
        });

        // Update stats
        document.getElementById('hub-stat-completed').textContent = completedCount;
        document.getElementById('hub-stat-mastered').textContent = masteredCount;
        document.getElementById('hub-stat-attempts').textContent = totalAttempts;
        document.getElementById('hub-stat-due').textContent = dueCount;
        if (scoreCount > 0) {
            document.getElementById('hub-stat-avg').textContent = Math.round(totalScore / scoreCount) + '%';
        }

    } catch (e) {
        console.debug('Error loading quiz progress:', e);
    }
})();
</script>
{% endblock %}
