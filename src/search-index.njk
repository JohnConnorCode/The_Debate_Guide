{%- set searchData = [] -%}
{%- for part in chapters.parts -%}
  {%- for chapter in part.chapters -%}
    {%- set chapterUrl = '/chapters/' + part.id + '/chapter-' + (chapter.number | padZero) + '-' + chapter.slug + '/' -%}
    {%- set item = {
      "title": chapter.title,
      "subtitle": chapter.subtitle,
      "url": chapterUrl,
      "chapter": chapter.number,
      "part": part.number,
      "partTitle": part.title,
      "type": "chapter"
    } -%}
    {%- set searchData = (searchData.push(item), searchData) -%}
  {%- endfor -%}
{%- endfor -%}
