{# Keyboard Shortcuts Help Modal #}
<div class="keyboard-help-modal" id="keyboard-help" aria-hidden="true" role="dialog" aria-labelledby="keyboard-help-title">
    <div class="keyboard-help-backdrop"></div>
    <div class="keyboard-help-content">
        <div class="keyboard-help-header">
            <h2 id="keyboard-help-title">Keyboard Shortcuts</h2>
            <button class="keyboard-help-close" aria-label="Close keyboard shortcuts">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="keyboard-help-body">
            <div class="keyboard-help-section">
                <h3>Navigation</h3>
                <ul class="keyboard-help-list">
                    <li>
                        <span class="keyboard-help-keys"><kbd>←</kbd></span>
                        <span class="keyboard-help-desc">Previous chapter</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>→</kbd></span>
                        <span class="keyboard-help-desc">Next chapter</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>Esc</kbd></span>
                        <span class="keyboard-help-desc">Go to contents / Close modal</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>Home</kbd></span>
                        <span class="keyboard-help-desc">Scroll to top</span>
                    </li>
                </ul>
            </div>
            <div class="keyboard-help-section">
                <h3>Search & Menus</h3>
                <ul class="keyboard-help-list">
                    <li>
                        <span class="keyboard-help-keys"><kbd>/</kbd> <span class="keyboard-help-or">or</span> <kbd>Ctrl</kbd><kbd>K</kbd></span>
                        <span class="keyboard-help-desc">Open search</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>T</kbd></span>
                        <span class="keyboard-help-desc">Toggle chapter table of contents</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>?</kbd></span>
                        <span class="keyboard-help-desc">Show this help</span>
                    </li>
                </ul>
            </div>
            <div class="keyboard-help-section">
                <h3>Reading</h3>
                <ul class="keyboard-help-list">
                    <li>
                        <span class="keyboard-help-keys"><kbd>D</kbd></span>
                        <span class="keyboard-help-desc">Toggle dark/light mode</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>+</kbd> <span class="keyboard-help-or">/</span> <kbd>-</kbd></span>
                        <span class="keyboard-help-desc">Increase / decrease font size</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>Space</kbd></span>
                        <span class="keyboard-help-desc">Scroll down</span>
                    </li>
                    <li>
                        <span class="keyboard-help-keys"><kbd>Shift</kbd><kbd>Space</kbd></span>
                        <span class="keyboard-help-desc">Scroll up</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="keyboard-help-footer">
            <span class="keyboard-help-tip">Press <kbd>?</kbd> anytime to show shortcuts</span>
        </div>
    </div>
</div>
